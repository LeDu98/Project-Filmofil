@using Domen
@model List<Studio>

@{
    ViewData["Title"] = "Studios";
}

<style>
    .card:hover {
        box-shadow: -1px 9px 40px -12px #808080;
    }
</style>
<script>
    if (window.history.replaceState) {
        window.history.replaceState(null, null, window.location.href);
    }
</script>

<h1>Studios</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<vc:search-bar search-pager="@ViewBag.SearchPager">
</vc:search-bar>

@if (@Model.Count == 0)
{
    <h3>Studio is not found!</h3>
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="card" style="width:20em;margin:10px;">
            <img src="~/img/studioLogo/@item.LogoImg" class="card-img-top" />
            <div class="card-body">
                <div class="card-title">
                    <h2>@item.Name</h2>
                </div>
                <a href="/Studio/Details/@item.StudioId" class="btn btn-primary">Read More...</a>
            </div>
        </div>
    }
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript">
    $('.card').hover(
        function () {
            $(this).animate({
                marginTop: "-=1%",
                marginBottom: "+=1%"
            }, 200)
        },
        function () {
            $(this).animate({
                marginTop: "+=1%",
                marginBottom: "-=1%"
            })
        }
    )
</script>
