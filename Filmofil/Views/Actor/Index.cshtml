@using Domen
@model List<Actor>

@{
    ViewData["Title"] = "Actors";
}

<style>
    .card:hover {
        box-shadow: -1px 9px 40px -12px #808080;
    }
</style>

<h1>Actors</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="card" style="width:10em;margin:10px;">
            <img src="@item.Image" class="card-img-top" />
            <div class="card-body">
                <div class="card-title">
                    <h4>@item.FirstName @item.LastName</h4>
                </div>
                <a href="Actor/Details/@item.PersonId" class="btn btn-primary">Read More...</a>
            </div>
        </div>
    }
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript">
    $('.card').hover(
        function () {
            $(this).animate({
                marginTop: "-=1%",
                marginBottom : "+=1%"
            },200)
        },
        function () {
            $(this).animate({
                marginTop: "+=1%",
                marginBottom : "-=1%"
            })
        }
    )
</script>
