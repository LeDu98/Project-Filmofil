            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Website)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LogoImg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Headquarter)
